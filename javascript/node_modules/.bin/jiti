#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@tailwindcss/node/node_modules/jiti/lib/jiti-cli.mjs" "$@"
  ret=$?
else 
  node  "$basedir/../@tailwindcss/node/node_modules/jiti/lib/jiti-cli.mjs" "$@"
  ret=$?
fi
exit $ret
