<body>
    <div class="main">
        <h1>
            Exercise - Dummy Data generator
        </h1>
        <p class="fs-4">
            Click the button to generate and insert dummy data to database collection, and click again to Clear
            and delete all data.
        </p>
        <button type="button" class="hero btn btn-outline-success w-25">
            <p class="text">Insert Data!!</p>
        </button>
        <br>

    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
<script>

    let btn = document.querySelector(".hero")
    let text = document.querySelector(".text")
    btn.addEventListener(("click"), async (e) => {
        console.log("Clicked!!!");
        console.log(e.detail);
        
        text.innerHTML = "Only 10 Records Inserted Click Again to Reinsert new Records"
        let fet = await fetch("/insert")
        let data = await fet.json()
        console.log(data);

    })

</script>

